<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    tools:context=".HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient2">

        <!-- Your existing Toolbar and SearchBar code remains here -->
        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_scrollFlags="scroll|enterAlways|snap">
            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:ellipsize="end"
                android:layout_weight="3"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:layout_margin="3dp"
                android:textColor="@color/white"
                android:textStyle="normal|bold"
                android:paddingVertical="2dp"
                android:scrollHorizontally="true"
                android:clickable="true"
                android:background="@drawable/adddress_background"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingHorizontal="10dp"
                android:freezesText="true"
                android:text="Home: " />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.3"
                android:padding="2dp"
                android:contentDescription="Current Delivery Slot"
                android:background="@drawable/slot_background"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 Jan"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="8 AM - 11 AM"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/searchBarCard"
            android:background="@drawable/background_of_category_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="8dp">
                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    app:tint="?android:attr/textColorSecondary"/>
                <TextView
                    android:id="@+id/search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Search for Products, Brands and More"
                    android:textSize="14sp"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_camera"
                    app:tint="?android:attr/textColorSecondary"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <include layout="@layout/item_category_shimmer" />
                    <include layout="@layout/item_category_shimmer" />
                    <include layout="@layout/item_category_shimmer" />
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categoriesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:visibility="gone"
                android:clipToPadding="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                tools:listitem="@layout/item_category"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/bannerViewPager"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:visibility="gone"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="2dp"/>
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/slideshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <include layout="@layout/item_product_grid_placeholder" />
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>


            <!-- Deals Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deals of the Day"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/dealsShimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <include layout="@layout/item_product_placeholder" />
                    <include layout="@layout/item_product_placeholder" />
                    <include layout="@layout/item_product_placeholder" />
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dealsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:visibility="gone"
                tools:listitem="@layout/item_product"/>

            <!-- Trending Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trending Products"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/trendingShimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <include layout="@layout/item_product_grid_placeholder" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                        <include layout="@layout/item_product_grid_placeholder" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/trendingRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/item_product_grid"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
