<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Phone Number"
        android:textColor="@color/dialog_text_black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="We will send a verification code to this number."
        android:textColor="#757575"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etPhoneInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/dialog_input_bg"
        android:hint="9876543210"
        android:inputType="phone"
        android:maxLength="10"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/dialog_text_black"
        android:textColorHint="@color/dialog_input_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
            android:text="CANCEL"
            android:textColor="@color/dialog_action_red"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnVerify"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_btn_sky_blue"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="VERIFY"
            android:textColor="@color/dialog_bg_white"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>