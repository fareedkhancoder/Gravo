<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#F1F3F6"
    tools:context=".CheckoutActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarCheckout"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:title="Checkout"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Shipping Address Section -->
    <TextView
        android:id="@+id/shippingAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shipping Address"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarCheckout"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/addressCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/shippingAddressLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/userNameAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rohan Kumar"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceBodyLarge"/>

            <TextView
                android:id="@+id/fullAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="123, Civil Lines, Meerut - 250001"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Item Details Section -->
    <TextView
        android:id="@+id/itemDetailsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Details"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/addressCard"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- We use an <include> tag to reuse the cart item layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productCheckoutRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/itemDetailsLabel"
        app:layout_constraintBottom_toTopOf="@id/summaryCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_cart"/>

    <!-- Order Summary and Confirmation at the Bottom -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/summaryCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/totalPriceLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Payable:"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/totalPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="bold"
                tools:text="â‚¹499"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/totalPriceLabelTextView"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirmOrderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Order"
                android:backgroundTint="@color/buy_now_green"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>