<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item android:left="4dp" android:right="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#000000" /> <size android:width="4dp" android:height="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:left="4dp" android:right="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#CCCCCC" /> <size android:width="3dp" android:height="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>